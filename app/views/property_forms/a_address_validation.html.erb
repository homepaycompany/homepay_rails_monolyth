<div class="main-section">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <%= render 'property_forms/progress_bar/progress_bar', section: 1, name: 'Addresse'  %>
      <div class="form-container">
        <div class="form-title text-center">
          <h1>Confirmez l'addresse de votre bien</h1>
        </div>
        <div class="form-body">
          <div id="map" style="width: 100%;height: 300px; margin-bottom: 20px" data-markers="<%= @marker.to_json %>"></div>
          <p class="text-center"><%= @property_form.address %></p>
        </div>
        <%= render 'property_forms/form_validation/form_validation', next_p: 'Valider', previous_p: 'Retour' %>
      </div>
      </div>
    </div>
  </div>
</div>

<%= link_to property_form_property_type_path(@property_form), method: :get do %>
  <div class="btn hidden" id="move-to-next-section"></div>
<% end %>
