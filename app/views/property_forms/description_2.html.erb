<div class="main-section">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="form-container">
        <div class="form-title text-center">
          <h1>Description générale du bien (1/4)</h1>
        </div>
        <div class="form-body">
          <% if @property_form.property_type == 'appartment' %>
            <%= render 'description_2_appartment' %>
          <% else %>
            <%= render 'description_2_house' %>
          <% end %>
        </div>
        <div class="form-validation">
          <div class="btn form-button" id="go-back">
            Retour
          </div>
          <div class="btn form-button" id="validate-section">
            Valider
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to property_form_description_3_path(@property_form), method: :get do %>
  <div class="btn hidden" id="move-to-next-section"></div>
<% end %>
