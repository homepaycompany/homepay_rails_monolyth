          <div>
            <div class="form-input">
              <%= simple_form_for(@property_form, remote: true) do |f| %>
                <%= f.input :size_terrace_sqm, label: false,  placeholder: (@property_form.size_terrace_sqm || "m2"), input_html: {class:'hidden'} %>
