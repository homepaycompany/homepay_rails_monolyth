<div class="form-section">
  <div class="row">
    <div class="col-xs-12">
      <div class="form-field form-field-toggle">
        <div class="toggle-btn"></div>
        <span>Il y'a un balcon</span>
        <div class="hidden">
          <%= simple_form_for(@property_form, remote: true) do |f| %>
            <%= f.input :has_balcony, label: false %>
            <%= f.submit class:"hidden form-field-submit-button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="form-section">
  <div class="row">
    <div class="form-field-toggle">
      <div class="col-xs-12">
        <div class="form-field form-field-toggle">
          <div class="toggle-btn" id="js-reveal" data-field="property_form_size_terrace_sqm"></div>
