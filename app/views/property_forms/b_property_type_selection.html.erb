<div class="main-section">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <%= render 'property_forms/progress_bar/progress_bar', section: 2, name: 'Type de bien'  %>
      <div class="form-container">
        <div class="form-title text-center">
          <h1>De quel type de bien s'agit-il ?</h1>
        </div>
        <div class="form-body">
          <div class="row">
            <div class="col-xs-6 text-center">
              <%= link_to property_form_description_1_path(@property_form, property_type:'house'), method: :put do %>
                <div class="btn">
                  <i class="fas fa-home" style="font-size: 100px;"></i>
                </div>
              <% end %>
              <p>Maison</p>
            </div>
            <div class="col-xs-6 text-center">
              <%= link_to property_form_description_1_path(@property_form, property_type:'appartment'), method: :put do %>
                <div class="btn">
                  <i class="far fa-building" style="font-size: 100px;"></i>
                </div>
              <% end %>
              <p>Appartement</p>
            </div>
          </div>
        </div>
        <div class="form-validation">
      </div>
      </div>
    </div>
  </div>
</div>
