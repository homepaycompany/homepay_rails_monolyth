<div class="form-selection-box js-form-selection-box"
  id="js-form-selection-box"
  data-name="<%= t[:name] %>"
  data-selected="<%= @property_form.send t[:name].to_sym %>"
  <%= "data-reveal=js-property-form-#{t[:connected_field]}" if t[:connected_field] %>>
  <%= t[:desc] %>
</div>
<div class="hidden">
  <%= simple_form_for(@property_form, remote: true) do |f| %>
    <div class="div" id=<%= "js-hidden-form-#{t[:name]}" %>></div>
    <%= f.submit class:"hidden form-field-submit-button"%>
  <% end %>
</div>

