<div class="form-field-label">
  <i class="fas fa-text-width form-field-logo"></i>
  <span><%= t[:desc] %></span>
</div>
<div class="form-input">
  <%= simple_form_for(@property_form, remote: true) do |f| %>
    <%= f.input t[:name], label: false,  placeholder: t[:unit] %>
    <%= f.submit class:"hidden form-field-submit-button" %>
  <% end %>
</div>
