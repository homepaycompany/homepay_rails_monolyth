<div class="main-section">
  <div class="container">
    <div class="faq-section">
      <div class="row">
        <h2 class="text-center">Questions fr√©quentes</h2>
        <% @faqs.each do |faq| %>
          <div class="col-xs-12">
            <div class="question-wrapper" id="js-faq-question" data-question="<%= faq.id %>">
              <p>
                <%= faq.question %>
              </p>
              <i class="fas fa-chevron-down"></i>
            </div>
            <div class="answer-wrapper hidden" id="js-faq-answer" data-answer="<%= faq.id %>">
              <p>
                <%= faq.answer %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

