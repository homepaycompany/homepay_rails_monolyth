<!-- Footer -->
<footer id="main-footer">
  <div class="container footer">
    <div class="row">
      <div class="text-center col-xs-12 col-sm-3">
        <%= link_to root_path do %>
          <%= image_tag "logo.png" %>
          <p>© Homepay (2017)</p>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <h4>Entreprise</h4>
        <ul>
          <li>
            <%= link_to "Nous contacter", about_path %>
          </li>
          <li>
            <%= mail_to "javascript:void(0)", "Contactez-nous" %>
          </li>
        </ul>
      </div>
      <div class="col-xs-12 col-sm-3">
        <h4>Ressources</h4>
        <ul>
          <li>
            <%= link_to "Mentions légales", "javascript:void(0)" %>
          </li>
        </ul>
      </div>
      <div class="footer-links col-xs-12 col-sm-3">
        <h4>Suivez-nous</h4>
        <ul>
          <li>
            <%= link_to "javascript:void(0)", target: :_blank do %>
              <i class="fa fa-twitter" aria-hidden="true"></i>
            <% end %>
          </li>
          <li>
            <%= link_to "javascript:void(0)", target: :_blank do %>
              <i class="fa fa-facebook" aria-hidden="true"></i>
            <% end %>
          </li>
          <li>
            <%= link_to "javascript:void(0)", target: :_blank do %>
              <i class="fa fa-instagram" aria-hidden="true"></i>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>
