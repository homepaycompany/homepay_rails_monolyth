<!-- Footer -->
<footer id="main-footer">
  <div class="container footer">
    <div class="row">
      <div class="text-center col-xs-12 col-sm-3">
        <%= link_to root_path do %>
          <%= image_tag "logo.png" %>
          <p>© Homepay (2018)</p>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <h4>Entreprise</h4>
        <ul>
          <li>
            <%= link_to "A propos", about_path %>
          </li>
          <li>
            <%= mail_to "contact@homepay.fr", "Nous contacter" %>
          </li>
        </ul>
      </div>
      <div class="col-xs-12 col-sm-3">
        <h4>Ressources</h4>
        <ul>
          <li>
            <%= link_to "Mentions légales", "javascript:void(0)" %>
          </li>
        </ul>
      </div>
      <div class="footer-links col-xs-12 col-sm-3">
        <h4>Suivez-nous</h4>
        <ul>
          <li>
            <%= link_to 'https://twitter.com/homepay_social?lang=fr', target: :_blank do %>
              <i class="fab fa-twitter"></i>
            <% end %>
          </li>
          <li>
            <%= link_to 'https://www.facebook.com/homepay.fr', target: :_blank do %>
              <i class="fab fa-facebook-f"></i>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>
